<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Analyzer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen">
        <!-- Header -->
        <nav class="bg-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center">
                            <h1 class="text-2xl font-bold text-gray-800">Social Media Analyzer</h1>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <!-- Search Section -->
            <div class="bg-white shadow rounded-lg p-6 mb-6">
                <h2 class="text-xl font-semibold mb-4">Search Social Media</h2>
                <form id="searchForm" class="space-y-4">
                    <div>
                        <label for="query" class="block text-sm font-medium text-gray-700">Search Query</label>
                        <input type="text" id="query" name="query" 
                               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                               placeholder="Enter your search terms...">
                    </div>
                    <div>
                        <button type="submit" 
                                class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Search
                        </button>
                    </div>
                </form>
            </div>

            <!-- Results Section -->
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-xl font-semibold mb-4">Results</h2>
                
                <!-- Loading indicator -->
                <div id="loading" class="hidden">
                    <div class="flex items-center justify-center">
                        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
                        <span class="ml-2">Analyzing...</span>
                    </div>
                </div>

                <!-- Analysis Section -->
                <div id="analysisSection" class="mb-8 hidden">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Analysis</h3>
                    <div id="analysis" class="prose max-w-none bg-gray-50 rounded-lg p-4"></div>
                </div>

                <!-- Tweets Section -->
                <div id="results" class="space-y-6">
                    <!-- Results will be populated here -->
                </div>
            </div>
        </main>
    </div>

    <script>
        document.getElementById('searchForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const query = document.getElementById('query').value;
            const resultsDiv = document.getElementById('results');
            const loadingDiv = document.getElementById('loading');
            const analysisSection = document.getElementById('analysisSection');
            const analysisDiv = document.getElementById('analysis');
            
            // Show loading
            loadingDiv.classList.remove('hidden');
            resultsDiv.innerHTML = '';
            analysisSection.classList.add('hidden');
            
            try {
                const response = await fetch('/api/analyze', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ query })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Display analysis
                    if (data.data.analysis) {
                        analysisDiv.innerHTML = `<p class="text-gray-700">${data.data.analysis}</p>`;
                        analysisSection.classList.remove('hidden');
                    }

                    // Display tweets
                    let html = '';
                    data.data.tweets.forEach(tweet => {
                        const user = data.data.includes?.users?.find(u => u.id === tweet.author_id);
                        html += `
                            <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                                <div class="flex items-start space-x-3">
                                    <div class="flex-grow">
                                        ${user ? `
                                            <p class="font-medium text-gray-900">@${user.username}</p>
                                            <p class="text-gray-500 text-sm">${user.name}</p>
                                        ` : ''}
                                        <p class="text-gray-800 mt-2">${tweet.text}</p>
                                        
                                        <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                                            <span title="Created at">
                                                ${new Date(tweet.created_at).toLocaleString()}
                                            </span>
                                        </div>

                                        ${tweet.public_metrics ? `
                                            <div class="mt-2 flex items-center space-x-6 text-sm text-gray-500">
                                                <span title="Retweets">
                                                    üîÑ ${tweet.public_metrics.retweet_count}
                                                </span>
                                                <span title="Replies">
                                                    üí¨ ${tweet.public_metrics.reply_count}
                                                </span>
                                                <span title="Likes">
                                                    ‚ù§Ô∏è ${tweet.public_metrics.like_count}
                                                </span>
                                                <span title="Quotes">
                                                    üìù ${tweet.public_metrics.quote_count}
                                                </span>
                                            </div>
                                        ` : ''}
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    
                    resultsDiv.innerHTML = html || '<p class="text-gray-600">No results found</p>';
                } else {
                    resultsDiv.innerHTML = `<p class="text-red-600">Error: ${data.error}</p>`;
                }
            } catch (error) {
                resultsDiv.innerHTML = '<p class="text-red-600">Error occurred while fetching results</p>';
            } finally {
                loadingDiv.classList.add('hidden');
            }
        });
    </script>
</body>
</html> 